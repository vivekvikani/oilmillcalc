
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.oil.vivek.oilmillcalc.aboutUs"
    android:background="#16170432"
    android:clickable="true"
    android:id="@+id/test">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/AppName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/app_name"
        android:id="@+id/AppName"
        android:textSize="22sp"

        android:layout_marginTop="16dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/trial_version"
        android:id="@+id/trialDays"
        android:textColor="#ffc00200"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Need help? Call or Whatsapp us at +91-8758942160"
        android:id="@+id/contactInfo"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:textSize="18dp"
        android:autoLink="phone|email"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/trialDays"
        />

    <Button
        android:id="@+id/pay_online"
        style="@style/Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="30dp"
        android:background="@drawable/button_active"
        android:text="Pay Online"
        android:layout_above="@+id/privacypolicyTV"
        android:layout_alignRight="@+id/trialDays"
        android:layout_alignEnd="@+id/trialDays" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/VersionNumber"
        android:id="@+id/versionTxt"
        android:textColor="#ff737272"
        android:layout_alignBottom="@+id/AppName"
        android:layout_toRightOf="@+id/AppName"
        android:layout_toEndOf="@+id/AppName"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="3dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/privacypolicyTV" />

</RelativeLayout>
