<ViewSwitcher
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/viewSwitcher"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context="com.oil.vivek.cottoncalculator.authentication"
    xmlns:tools="http://schemas.android.com/tools"
    android:animateFirstView="true"
    android:background="#B2B2B2">

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="#B2B2B2" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter"
            android:id="@+id/finalEnter"
            android:layout_gravity="right"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
             />

        <EditText
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:hint="Mobile Number"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:gravity="center_horizontal"
            android:id="@+id/number"
            android:layout_above="@+id/finalEnter"
            android:layout_marginBottom="50dp"
            android:inputType="number"
            android:layout_marginTop="15dp"
            android:maxLength="13"/>

        <EditText
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:hint="Enter Full Name"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:id="@+id/name"
            android:inputType="textCapWords"
            android:layout_above="@+id/number" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Just a few Details"
            android:id="@+id/textView3"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="17dp"
            android:textSize="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Contact us at +91 8758942160 or send an email to cottoncalculator@gmail.com"
            android:id="@+id/textView4"
            android:layout_below="@+id/finalEnter"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:layout_marginTop="48dp"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:autoLink="phone|email"
            android:textSize="18dp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="*INTERNET REQUIRED*"
            android:id="@+id/textView2"
            android:layout_above="@+id/finalEnter"
            android:layout_centerHorizontal="true"
            android:singleLine="true"
            android:textColor="#ffd60300"
            android:layout_marginBottom="6dp"
            android:textSize="18dp" />

        <!--<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Enter Name"
            android:id="@+id/textView2"
            android:layout_alignBottom="@+id/name"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Enter Number"
            android:id="@+id/textView5"
            android:layout_alignBottom="@+id/number"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="22dp" />-->
    </RelativeLayout>

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="#B2B2B2">



        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:ems="10"
            android:id="@+id/password"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/passwordbtn"
            android:layout_marginBottom="20dp"
            android:gravity="center_horizontal"
            android:width="180dp"
            android:maxLength="12" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter"
            android:id="@+id/passwordbtn"
            android:layout_gravity="right"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Enter Valid Key"
            android:id="@+id/keyTxt"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:textSize="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="If you don&apos;t have a key, contact us at +91 8758942160 or send an email to cottoncalculator@gmail.com"
            android:id="@+id/msg"
            android:layout_below="@+id/passwordbtn"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:layout_marginTop="48dp"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:autoLink="phone|email"
            android:textSize="18dp" />

    </RelativeLayout>

</ViewSwitcher>
